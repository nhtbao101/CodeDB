extend ../layout/common.pug
block content
    div(class="d-flex justify-content-end")
        button(class="btn btn-outline-info") Cart
    h1 Product list
    
    .d-flex.align-items-center         
        
        form.ml-auto(action="/products/search" method="GET" class="d-flex") 
            input(type="text" name="querySearch" class="form-control")
            button(class="btn btn-primary ml-2 btnSearh") Search
    
    .row
        if !products
            .alert.alert-danger= 'Name product is not found !'
            return        
        else
            .alert.alert-danger.h-25= 'Found ' + products.length + ' products !'
            each product in products                
                .col-sm-6.col-md-4.col-lg-3
                    .card.mb-3
                        img.card-img-top(src=product.image)
                        .card-body
                            h5.card-title= product.name
                            p.card-text= product.description
                            a.btn.btn-primary(href='/cart/add/'+ product.id) Add to cart
    