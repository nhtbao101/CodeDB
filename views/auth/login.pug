extend ../layout/common.pug
block content

    h1 Login
    //- If has error in errors => 
    if errors 
        each error in errors 
            .alert.alert-danger= error
    //- 
    form(action="/auth/login", method="POST")
        .form-group
            label(class="font-weight-light" for="email") Email
            input#name.form-control(type="text", name="email" value= values? values.email: '')

        .form-group
            label(class="font-weight-light" for="password") Password
            input#phone.form-control(type="password", name="password" alue= values? values.password: '')        
        button(class="btn btn-primary mt-3") Login